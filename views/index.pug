extends layout
block content
    main
        .row.justify-content-center
            .col-lg-6.container3.text-white.p-5
                .container4
                    h3.text-center
                        | One 
                        span.spn $1 
                        | can Save a life.
                .container.pt-3
                    form(name='myForm', action='/api/payment/new', method='POST')
                        input#firstname(type='text', name='firstName', placeholder='firstName')
                        hr
                        input#lastName(type='text', name='lastName', placeholder='firstName')
                        hr
                        input#email(type='email', name='email', placeholder='Email')
                        hr
                        input#course_id(type='course_id', name='course_id', placeholder='course')
                        hr
                        input#paymentType(type='paymentType', name='paymentType', placeholder='paymentType')
                        hr
                        input#user_id(type='user_id', name='user_id', placeholder='user_id')

                        hr
                        select(name='amount')
                            option Select Amount
                            option(value='500') 500
                            option(value='1000') 1000
                            option(value='2000') 2000
                        .bttn.pt-2
                            button(type='submit') DONATE